{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist/server",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "noEmit": false
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules"]
  }